{
  "extends": "gts",
  "plugins": ["neverthrow"],
  "rules": {
    "neverthrow/no-throw": "error",
    "@typescript-eslint/naming-convention": [
      "warn",
      {
        "selector": "interface",
        "format": ["PascalCase"]
      },
      {
        "selector": "typeAlias",
        "format": ["PascalCase"]
      },
      {
        "selector": "variable",
        "types": ["boolean"],
        "format": ["camelCase"],
        "prefix": ["is", "has", "should", "can", "will", "does"]
      }
    ],
    "max-lines-per-function": ["warn", 80],
    "complexity": ["warn", 10],
    "require-jsdoc": "warn"
  }
}
