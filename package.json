{
  "name": "axe-handle",
  "version": "0.1.0",
  "description": "MCP Server Generator for Express.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "axe-handle": "dist/cli.js"
  },
  "scripts": {
    "check-structure": "node utils/check-directory-structure.js",
    "update-structure": "node utils/check-directory-structure.js --update",
    "check-paths": "node utils/validate-path-headers.js",
    "fix-paths": "node utils/validate-path-headers.js --fix",
    "prebuild": "npm run check-all",
    "check-all": "npm run check-structure && npm run check-paths && npm run lint",
    "build": "tsc && tsc-alias",
    "postbuild": "cp -r templates dist/",
    "start": "node dist/index.js",
    "dev": "npm run check-all && ts-node -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "generate": "ts-node -r tsconfig-paths/register src/cli.ts",
    "clean": "rm -rf dist",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "generator",
    "express",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "eta": "^2.2.0",
    "express": "^4.18.2",
    "glob": "^10.4.5",
    "neverthrow": "^6.2.0",
    "protobufjs": "^7.4.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@types/uuid": "^9.0.8",
    "chalk": "^4.1.2",
    "eslint": "^8.56.0",
    "eslint-plugin-neverthrow": "^1.1.4",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/axe-handle.git"
  },
  "engines": {
    "node": ">=18"
  }
}
